{
  "name": "d-bus-type-system",
  "version": "0.14.0",
  "description": "A TypeScript implementation of the D-Bus type system.",
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/d-bus-type-system.git"
  },
  "license": "MIT",
  "author": "Clemens Akens",
  "sideEffects": false,
  "type": "module",
  "exports": "./lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "prepare": "node onecfg.js",
    "ci": "run-p compile:check compile:emit format:check lint test",
    "compile:check": "tsc",
    "compile:emit": "tsc --project tsconfig.emit.json",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --silent --passWithNoTests",
    "release": "npm version",
    "postrelease": "git push --follow-tags"
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@onecfg/standard": "^8.0.0",
    "@swc/core": "^1.3.23",
    "@swc/jest": "^0.2.24",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-markdown": "^3.0.0",
    "jest": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "onecfg": "^5.2.1",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4"
  },
  "wallaby": {
    "env": {
      "params": {
        "runner": "--experimental-vm-modules"
      }
    }
  }
}
